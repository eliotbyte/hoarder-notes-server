{
  "type": "postgres",
  "host": "${DB_HOST:db}",
  "port": "${DB_PORT:5432}",
  "username": "${POSTGRES_USER:postgres}",
  "password": "${POSTGRES_PASSWORD:postgres}",
  "database": "${POSTGRES_DB:hoarder_notes_db}",
  "entities": ["dist/**/*.entity.js"],
  "migrations": ["dist/migration/*.js"],
  "cli": {
    "migrationsDir": "src/migration"
  }
}
